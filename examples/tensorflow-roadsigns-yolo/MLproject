name: tensorflow-roadsigns-yolo

entry_points:
  transfer_learn:
    parameters:
      data_dir: { type: path, default: "/nfs/data" }
      image_size: { type: string, default: "448,448,3" }
      grid_size: { type: float, default: 14 }
      skip_finetune: { type: string, default: "True" }
      augment: { type: string, default: "True" }
      model_architecture: { type: string, default: "mobilenetv2" }
      epochs: { type: float, default: 300 }
      batch_size: { type: float, default: 16 }
      register_model_name: { type: string, default: "" }
      learning_rate: { type: float, default: 0.01 }
      optimizer: { type: string, default: "Adam" }
      validation_split: { type: float, default: 5 }
      seed: { type: float, default: -1 }
    command: >
      python src/transfer_learn.py
      --data-dir {data_dir}
      --image-size {image_size}
      --grid-size {grid_size}
      --skip-finetune {skip_finetune}
      --augment {augment}
      --model-architecture {model_architecture}
      --epochs {epochs}
      --batch-size {batch_size}
      --register-model-name {register_model_name}
      --learning-rate {learning_rate}
      --optimizer {optimizer}
      --validation-split {validation_split}
      --seed {seed}

  infer:
    parameters:
      data_dir: { type: path, default: "/nfs/data" }
      image_size: { type: string, default: "448,448,3" }
      grid_size: { type: float, default: 14 }
      model_name: { type: string, default: "mobilenetv2" }
      model_version: { type: string, default: "1" }
      batch_size: { type: float, default: 16 }
      seed: { type: float, default: -1 }
    command: >
      python src/infer.py
      --data-dir {data_dir}
      --image-size {image_size}
      --grid-size {grid_size}
      --model-name {model_name}
      --model-version {model_version}
      --batch-size {batch_size}
      --seed {seed}
